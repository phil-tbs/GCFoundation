@using GCFoundation.Components.Models
@using GCFoundation.Web.Resources
@using Microsoft.AspNetCore.Routing

<gcds-heading tag="h1" margin-bottom="400">@Components.Index_Page_Title</gcds-heading>

<gcds-grid columns="repeat(3, 1fr)" equal-row-height>
   
    <gcds-card card-title="@Components.Index_Badge_Title"
               href="@Url.Action("Badge", "Components")"
               description="@Components.Index_Badge_Description">

    </gcds-card>

    <gcds-card card-title="@Components.Index_Card_Title"
               href="@Url.Action("Card", "Components")"
               description="@Components.Index_Card_Description">

    </gcds-card>

    <gcds-card card-title="@Components.Index_FilteredSearch_Title"
               href="@Url.Action("Index", "FilteredSearch")"
               description="@Components.Index_FilteredSearch_Description">

    </gcds-card>

    <gcds-card card-title="@Components.Index_FormBuilder_Title"
               href="@Url.Action("FormBuilder", "Components")"
               description="@Components.Index_FormBuilder_Description">

    </gcds-card>

    <gcds-card card-title="@Components.Index_Forms_Title"
               href="@Url.Action("Forms", "Components")"
               description="@Components.Index_Forms_Description">

    </gcds-card>

    <gcds-card card-title="@Components.Index_Modal_Title"
               href="@Url.Action("Modal", "Components")"
               description="@Components.Index_Modal_Description">

    </gcds-card>

    <gcds-card card-title="@Components.Index_PageHeading_Title"
               href="@Url.Action("PageHeading", "Components")"
               description="@Components.Index_PageHeading_Description">

    </gcds-card>

    <gcds-card card-title="@Components.Index_Stepper_Title"
               href="@Url.Action("Stepper", "Components")"
               description="@Components.Index_Stepper_Description">

    </gcds-card>

    <gcds-card card-title="@Components.Index_Table_Title"
               href="@Url.Action("Table", "Components")"
               description="@Components.Index_Table_Description">

    </gcds-card>

    <gcds-card card-title="@Components.Index_UserLoginPartial_Title"
               href="@Url.Action("UserLogin", "Components")"
               description="@Components.Index_UserLoginPartial_Description">

    </gcds-card>

</gcds-grid>