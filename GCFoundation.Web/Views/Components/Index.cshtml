@using GCFoundation.Components.Models
@using GCFoundation.Web.Resources
@using Microsoft.AspNetCore.Routing

<gcds-heading tag="h1" margin-bottom="400">Components</gcds-heading>

<gcds-grid columns="repeat(3, 1fr)" equal-row-height>
   
    <gcds-card card-title="Forms"
               href="@Url.Action("FormValidationTest", "Components")"
               description="A way to create forms">

    </gcds-card>

    <gcds-card card-title="Table"
               href="@Url.Action("GetComponent", "Components", new { componentName = "Table"})"
               description="A way to display information in a table">

    </gcds-card>

    <gcds-card card-title="Modal"
               href="@Url.Action("GetComponent", "Components", new { componentName = "Modal"})"
               description="A way to display information in a popup box (modal)">

    </gcds-card>

    <gcds-card card-title="Filtered search"
               href="@Url.Action("Index", "FilteredSearch")"
               description="A way to display search with filtered result">

    </gcds-card>

    <gcds-card card-title="Badge"
               href="@Url.Action("GetComponent", "Components", new { componentName = "Badge"})"
               description="A way to display tags">

    </gcds-card>

    <gcds-card card-title="Page heading"
               href="@Url.Action("GetComponent", "Components", new { componentName = "PageHeading"})"
               description="A way to add main heading at the top of the page">

    </gcds-card>

    <gcds-card card-title="Form builder"
               href="@Url.Action("ExampleFormBuilder", "Components")"
               description="A way to build form automaticly from a structure">

    </gcds-card>

    <gcds-card card-title="Stepper"
               href="@Url.Action("GetComponent", "Components", new { componentName = "Stepper" })"
               description="Create a stepper for a flow or a form">

    </gcds-card>

</gcds-grid>