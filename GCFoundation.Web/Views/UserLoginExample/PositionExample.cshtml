@using GCFoundation.Web.Resources
@{
    var position = ViewData["UserLoginPosition"]?.ToString() ?? "header";
    ViewData["Title"] = string.Format(Components.UserLogin_Position_PageTitle, position.ToUpper());
}

<gcds-container size="xl" centered>
    <gcds-grid columns="1fr">
        <div>
            <gcds-heading tag="h1">@string.Format(Components.UserLogin_Position_PageTitle, position.ToUpper())</gcds-heading>
            <gcds-text>
                @Components.UserLogin_Position_Description
            </gcds-text>
        </div>
    </gcds-grid>

    @if (position == "header")
    {
        <gcds-alert alert-role="info" class="fdcp-mt-300">
            <gcds-text>@Components.UserLogin_Position_Header_Alert</gcds-text>
        </gcds-alert>
    }
    else if (position == "sidebar")
    {
        <gcds-grid columns="1fr" columns-tablet="300px 1fr" columns-desktop="300px 1fr" class="fdcp-mt-300">
            <aside>
                <section class="demo-panel" aria-labelledby="sidebar-login-title">
                    <div class="demo-panel__header">
                        <gcds-heading tag="h2" size="h5" id="sidebar-login-title">@Components.UserLogin_Position_Sidebar_Title</gcds-heading>
                    </div>
                    <div class="demo-panel__body">
                        <partial name="_ExampleUserLogin" />
                    </div>
                </section>
            </aside>
            <main>
                <gcds-text>@Components.UserLogin_Position_Sidebar_Content</gcds-text>
            </main>
        </gcds-grid>
    }
    else if (position == "content")
    {
        <gcds-grid columns="1fr" class="fdcp-mt-300">
            <div>
                <gcds-text>@Components.UserLogin_Position_Content_Before</gcds-text>
                
                <div class="fdcp-mt-300 fdcp-mb-300">
                    <section class="demo-panel" aria-labelledby="inline-login-title">
                        <div class="demo-panel__header">
                            <gcds-heading tag="h2" size="h5" id="inline-login-title">@Components.UserLogin_Position_Inline_Title</gcds-heading>
                        </div>
                        <div class="demo-panel__body">
                            <partial name="_ExampleUserLogin" />
                        </div>
                    </section>
                </div>
                
                <gcds-text>@Components.UserLogin_Position_Content_After</gcds-text>
            </div>
        </gcds-grid>
    }
    else if (position == "footer")
    {
        <gcds-grid columns="1fr" class="fdcp-mt-300">
            <div>
                <gcds-text>@Components.UserLogin_Position_Footer_Content</gcds-text>
            </div>
        </gcds-grid>
        
        <footer class="fdcp-mt-400 fdcp-pt-300 footer-border">
            <section class="demo-panel" aria-labelledby="footer-login-title">
                <div class="demo-panel__header">
                    <gcds-heading tag="h2" size="h5" id="footer-login-title">@Components.UserLogin_Position_Footer_Title</gcds-heading>
                </div>
                <div class="demo-panel__body">
                    <partial name="_ExampleUserLogin" />
                </div>
            </section>
        </footer>
    }

    <gcds-grid columns="1fr" class="fdcp-mt-400">
        <div>
            <gcds-text>
                <a href="@Url.Action("Index")">@Components.UserLogin_Position_BackToExamples</a>
            </gcds-text>
        </div>
    </gcds-grid>
</gcds-container>

