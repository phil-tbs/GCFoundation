@using Foundation.Components.Models

@if (ViewData["PageNotification"] != null)
{
	PageNotification? pageNotification = ViewData["PageNotification"] as PageNotification;

	if (pageNotification != null)
	{
		<gcds-notice type="@pageNotification.AlertType" notice-title-tag="h2" notice-title="@pageNotification.Title">
			<gcds-text>@pageNotification.Message</gcds-text>
		</gcds-notice>
	}
}