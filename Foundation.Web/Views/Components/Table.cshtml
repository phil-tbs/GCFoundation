        new() { Title = "Id", Field = "id", HeaderSort = true },
        new() { Title = "Name", Field = "name", HeaderSort = true },
        new() { Title = "Email", Field = "email", HozAlign = "center" }
    };
}

<fdcp-tabulator-table id="usersTable"
