{
  "// Note": "This is an example configuration for stateless authentication without sessions",
  
  "UserLoginSettings": {
    "ShowUserName": true,
    "ShowUserEmail": true,
    "ShowLoginTime": true,
    "ShowSessionTimeout": true,
    "ShowLogoutButton": true,
    "ShowProfileLink": false,
    "ProfileUrl": "/profile",
    "LogoutUrl": "/account/logout",
    "LoginUrl": "/account/login",
    "ContainerCssClasses": "fdcp-mb-200",
    "ShowUserAvatar": true,
    "CustomGreetingKey": null,
    "Position": "header"
  },

  "// Authentication Examples": {
    "// Cookie Authentication": {
      "ExpireTimeSpan": "08:00:00",
      "SlidingExpiration": false,
      "LoginPath": "/account/login",
      "LogoutPath": "/account/logout"
    },
    
    "// Azure AD": {
      "Instance": "https://login.microsoftonline.com/",
      "Domain": "yourdomain.onmicrosoft.com", 
      "TenantId": "your-tenant-id",
      "ClientId": "your-client-id",
      "CallbackPath": "/signin-oidc"
    },
    
    "// JWT": {
      "Issuer": "your-app-name",
      "Audience": "your-app-audience",
      "Key": "your-secret-key-minimum-256-bits",
      "ExpirationHours": 8
    }
  }
}
