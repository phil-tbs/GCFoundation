@using Foundation.Components.Models
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
<gcds-grid columns="repeat(3, 1fr)" equal-row-height>

    <gcds-card 
        card-title="Breadcrumbs" 
        href="@Url.Action("GetComponent", "Components", new { componentName = "Breadcrumbs"})" 
        badge="Canada.ca required" 
        description="Breadcrumbs is a path to the current page from each preceding level of the site's hierarchy."
        img-src="/iamges/preview-breadcrumbs.svg"
        img-alt="Breadcrumbs preview"></gcds-card>

    <gcds-card 
        card-title="Button" 
        href="@Url.Action("GetComponent", "Components", new { componentName = "Button"})" 
        description="The button is an interactive object that highlights an important or common action."
        img-src="/iamges/preview-button.svg"
        img-alt="Button preview"></gcds-card>

    <gcds-card card-title="Card"
        href="@Url.Action("GetComponent", "Components", new { componentName = "Card"})"
        description="A card is a box containing structured, actionable content on a single topic."
        img-src="/iamges/preview-card.svg"
        img-alt="Button preview">
    </gcds-card>

    <gcds-card card-title="Checkbox"
               href="@Url.Action("GetComponent", "Components", new { componentName = "Checkbox"})"
               description="A checkbox is a set of options for one or multiple selections."
               img-src="/iamges/preview-checkbox.svg"
               img-alt="Checkbox preview">
    </gcds-card>

    <gcds-card card-title="Container"
               href="@Url.Action("GetComponent", "Components", new { componentName = "Container"})"
               description="A container is a basic box layout with a set width for its contents."
               img-src="/iamges/preview-container.svg"
               img-alt="Container preview">
    </gcds-card>

    <gcds-card card-title="Date input"
               href="@Url.Action("GetComponent", "Components", new { componentName = "DateInput"})"
               description="A date input is a space to enter a known date"
               img-src="/iamges/preview-date-input.svg"
               img-alt="Date input preview">
    </gcds-card>

    <gcds-card card-title="Date modified"
               href="@Url.Action("GetComponent", "Components", new { componentName = "DateModified"})"
               description="Date modified is an indicator of the last update to a webpage or application."
               img-src="/iamges/preview-date-modified.svg"
               img-alt="Date modified preview">
    </gcds-card>

    <gcds-card card-title="Details"
               href="@Url.Action("GetComponent", "Components", new { componentName = "Details"})"
               description="Details is an interactive switch for a person to expand or collapse content."
               img-src="/iamges/preview-details.svg"
               img-alt="Details preview">
    </gcds-card>


    <gcds-card card-title="Error message"
               href="@Url.Action("GetComponent", "Components", new { componentName = "ErrorMessage"})"
               description="An error message is a description of a problem blocking a user goal."
               img-src="/iamges/preview-error-message.svg"
               img-alt="Error message preview">
    </gcds-card>

    <gcds-card card-title="Footer"
               badge="Canada.ca required"
               href="@Url.Action("GetComponent", "Components", new { componentName = "Footer"})"
               description="The footer is the responsive Government of Canada branded footer landmark."
               img-src="/iamges/preview-footer.svg"
               img-alt="Footer preview">
    </gcds-card>


    <gcds-card card-title="Grid"
               badge="Experimental"
               href="@Url.Action("GetComponent", "Components", new { componentName = "Grid"})"
               description="A grid is a responsive, flexible column layout to position elements on a page."
               img-src="/iamges/preview-grid.svg"
               img-alt="Grid preview">
    </gcds-card>

    <gcds-card card-title="Header"
               badge="Canada.ca required"
               href="@Url.Action("GetComponent", "Components", new { componentName = "Header"})"
               description="The header is the responsive Government of Canada branded header landmark."
               img-src="/iamges/preview-header.svg"
               img-alt="Header preview">
    </gcds-card>

    <gcds-card card-title="Heading"
               href="@Url.Action("GetComponent", "Components", new { componentName = "Heading"})"
               description="A heading is a title that establishes levels of hierarchy to organize page content into a structure."
               img-src="/iamges/preview-heading.svg"
               img-alt="Heading preview">
    </gcds-card>

    <gcds-card card-title="Input"
               href="@Url.Action("GetComponent", "Components", new { componentName = "Input"})"
               description="An input is a space to enter short-form information in response to a question or instruction."
               img-src="/iamges/preview-input.svg"
               img-alt="Input preview">
    </gcds-card>

    <gcds-card card-title="Language toggle"
               badge="Canada.ca required"
               href="@Url.Action("GetComponent", "Components", new { componentName = "LanguageToggle"})"
               description="The language toggle is a link to the same content in the other Official Language."
               img-src="/iamges/preview-lang-toggle.svg"
               img-alt="Language toggle preview">
    </gcds-card>

    <gcds-card card-title="Link"
               href="@Url.Action("GetComponent", "Components", new { componentName = "Link"})"
               description="A link is a navigational element that brings a person to a new page, website, file, or section on the current page."
               img-src="/iamges/preview-link.svg"
               img-alt="Link preview">
    </gcds-card>

    <gcds-card card-title="Notice"
               href="@Url.Action("GetComponent", "Components", new { componentName = "Notice"})"
               description="The notice is a short, prominent message that’s part of the page content."
               img-src="/iamges/preview-notice.svg"
               img-alt="Notice preview">
    </gcds-card>

    <gcds-card card-title="Pagination"
               href="@Url.Action("GetComponent", "Components", new { componentName = "Pagination"})"
               description="Pagination is a division of content into multiple linked pages."
               img-src="/iamges/preview-pagination.svg"
               img-alt="Pagination preview">
    </gcds-card>

    <gcds-card card-title="Radio Group"
               href="@Url.Action("GetComponent", "Components", new { componentName = "RadioGroup"})"
               description="The radio group is a set of options for a single selection."
               img-src="/iamges/preview-radio.svg"
               img-alt="Radio group preview">
    </gcds-card>

    <gcds-card card-title="Screenreader-only"
               href="@Url.Action("GetComponent", "Components", new { componentName = "ScreenreaderOnly"})"
               description="The screenreader-only component is text information only accessible with assistive technologies."
               img-src="/iamges/preview-screenreader-only.svg"
               img-alt="Radio group preview">
    </gcds-card>

    <gcds-card card-title="Search"
               href="@Url.Action("GetComponent", "Components", new { componentName = "Search"})"
               description="Search is a space for entering keywords to find relevant information."
               img-src="/iamges/preview-search.svg"
               img-alt="Search preview">
    </gcds-card>

    <gcds-card card-title="Select"
               href="@Url.Action("GetComponent", "Components", new { componentName = "Select"})"
               description="A select provides a large list of options for single selection."
               img-src="/iamges/preview-select.svg"
               img-alt="Select preview">
    </gcds-card>

    <gcds-card card-title="Side navigation"
               href="@Url.Action("GetComponent", "Components", new { componentName = "SideNavigation"})"
               description="A side navigation is a vertical list of page links on the left side of the screen."
               img-src="/iamges/preview-side-nav.svg"
               img-alt="Side navigation preview">
    </gcds-card>

    <gcds-card card-title="Signature"
               badge="Canada.ca required"
               href="@Url.Action("GetComponent", "Components", new { componentName = "Signature"})"
               description="The signature is the Government of Canada landmark identifier found in the header or footer."
               img-src="/iamges/preview-signature.svg"
               img-alt="Signature preview">
    </gcds-card>

    <gcds-card card-title="Stepper"
               href="@Url.Action("GetComponent", "Components", new { componentName = "Stepper"})"
               description="A stepper is a progress tracker for a multi-step process."
               img-src="/iamges/preview-stepper.svg"
               img-alt="Stepper preview">
    </gcds-card>

    <gcds-card card-title="Text"
               href="@Url.Action("GetComponent", "Components", new { componentName = "Text"})"
               description="Text is a styled and formatted paragraph that displays written content in an accessible way."
               img-src="/iamges/preview-text.svg"
               img-alt="Text preview">
    </gcds-card>

    <gcds-card card-title="Text area"
               href="@Url.Action("GetComponent", "Components", new { componentName = "TextArea"})"
               description="A text area is a space to enter long-form information in response to a question or instruction."
               img-src="/iamges/preview-textarea.svg"
               img-alt="Text area preview">
    </gcds-card>

    <gcds-card card-title="Theme and topic menu"
               href="@Url.Action("GetComponent", "Components", new { componentName = "TopicMenu"})"
               description="The theme and topic menu is a navigation to the top tasks of Government of Canada websites."
               img-src="/iamges/preview-topic-menu.svg"
               img-alt="Theme and topic menu preview">
    </gcds-card>

    <gcds-card card-title="Top navigation"
               href="@Url.Action("GetComponent", "Components", new { componentName = "TopNavigation"})"
               description="A top navigation is a horizontal list of page links."
               img-src="/iamges/preview-top-nav.svg"
               img-alt="Top navigation preview">
    </gcds-card>
   
    <gcds-card card-title="Forms"
               href="@Url.Action("FormValidationTest", "Components")"
        description="A way to create forms">

    </gcds-card>

</gcds-grid>